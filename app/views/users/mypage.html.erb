                fontSize : 12, //地図に表示する文字のサイズ
                fontColor : "areaColor", //地図に表示する文字の色。"areaColor"でエリアの色に合わせる
                fontShadowColor : "black", //地図に表示する文字の影の色
                
                onSelect : function(data){
                    location.href = areaLinks[data.area.code];
                        }
            }
        );
});

