<div class="topic-new-wrapper top" >
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h1 class="text-center">投稿編集</h1>
        <%= form_for @topic do |f| %>
        <%= image_tag @topic.image.url,:width => '100%' %>
          <div class="form-group bottom">
            <%= f.label :投稿写真 %>
            <%= f.file_field :image, class: 'image-up' %>
          </div>
          <div class="form-group">
            <%= f.label :訪れた県名 %>
            <%= f.select :prefecture, options_for_select(@topic.prefectures), {:include_blank => '県名を選択してください'}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :思い出タイトル %>
            <%= f.text_field :title, placeholder: "25文字以内で入力してください", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :旅行の思い出 %>
            <%= f.text_area :description, class: 'form-control form-text' %>
          </div>
          <div>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          </div>
        <% end %>
      </div>
      <div class="col-md-3"></div>
      <div class="bottom"> </div>
    </div>
  </div>
</div>