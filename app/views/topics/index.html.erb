<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user&.name %>さんの投稿
            </h2>
            <%= topic.id %>
            <%= topic.title %>
            <%= topic.created_at %>
            <%= image_tag topic.image.url %>
            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon favorite-color' %>
              <% end %>
            <% end %>
            <%= topic.favorite_users.count %>
            <%= link_to comments_new_path(topic_id: topic.id) do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon comments-icon' %>
               <p class="fukidashi">吹き出しが表示されます</p>
            <% end %>
            <p>　コメント</p>
            <p class="topic-text">
              <%= topic.description %>
              <% topic.comments.each do |comment| %>
                <P><%= comment.comment %></p>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>