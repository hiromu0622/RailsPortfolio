<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-3">
        <h1 class="text-center">新規投稿！</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :投稿写真 %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :訪れた県名 %>
            <%= f.select :prefecture, options_for_select(@topic.prefectures), {:include_blank => '県名を選択してください'}, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :思い出タイトル %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :旅行の思い出 %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>