<div class="topic-index-wrapper">
  <div class="container">
      <div class="row">
        <div class="col-md-6 offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= @topic.user&.name %>さんの投稿
            </h2>
            <div>topic_id<%= @topic.id %></div>
            <%= @topic.title %>
            <%= @topic.created_at %>
            <%= link_to topics_detail_path(topic_id: @topic.id) do %>
            <%= image_tag @topic.image.url %>
            <% end %>
            <% if !@topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: @topic.id),  method: :post, class: 'fukidashi-icon' do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
                <span class="fukidashi">いいねする</span>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: @topic.id), method: :delete, class: 'fukidashi-icon' do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon favorite-color' %>
              <span class="fukidashi">いいねを外す</span>
              <% end %>
            <% end %>
            <%= @topic.favorite_users.count %>
            <%= link_to comments_new_path(topic_id: @topic.id), class: 'fukidashi-icon' do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
              <span class="fukidashi">コメントを投稿する</span>
            <% end %>
            <%= link_to topic_path(@topic.id), method: :delete, class: 'fukidashi-icon' do %>
                <%= image_tag 'icons/delete.png', class: 'topic-index-icon' %>
                <span class="fukidashi">トピックを削除する</span>
            <% end %>
            <p>　コメント</p>
            <p class="topic-text">
              <%= @topic.description %>
              <% @topic.comments.each do |comment| %>
                <p><%= link_to comments_new_path(topic_id: @topic.id) do %></p>
                <%= comment.user&.name %>
                <% end %>
                <P><%= comment.comment %></p>
              <% end %>
            </p>
          </div>
        </div>
      </div>
  </div>
</div>