<div class="topic-index-wrapper">
  <div class="container flex">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="flex-auto">
          <div class="topic-index-single">
            <h4 class="topic-author">
              <%= topic.user&.name %>さんの投稿
            </h4>
            <%= topic.prefecture_name %>
            <%= l topic.created_at %>
            <%= image_tag topic.image.url %>
            <%= link_to comments_new_path(topic_id: topic.id) do %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
        <%# <div class="col-md-8"> %>
        
        <%# </div> %>
      </div>
    <% end %>
  </div>
</div>