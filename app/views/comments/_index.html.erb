<% comments.each do |comment| %>
    <p><%= link_to "#{comment.user.name}さん", users_mypage_path %>
    <%= safe_join(comment.comment.split("\n"),tag(:br)) %>
    <%# simple_formatではうまくいかないのでsafe_joinで改行ができるようになり、尚且つ以降の削除アイコンなどは開業されなくなった %>
    <% if comment.user == current_user %>
      <%= link_to topic_comment_path(comment.topic_id, comment.id), method: :delete, remote: true, class: 'fukidashi-icon', data: {confirm: "本当に削除しますか？"} do %>
        <%= image_tag 'icons/delete.png', class: 'topic-index-icon' %>
          <span class="fukidashi">コメントを削除する</span>
      <% end %>
    <% end %></p>
<% end %>